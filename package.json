{
  "name": "svg-symbol-viewer",
  "private": true,
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "https://jaydenseric.com"
  },
  "engines": {
    "node": ">=8.6"
  },
  "browserslist": "> 0.5%, not dead, node 8.6",
  "dependencies": {
    "babel-plugin-transform-inline-environment-variables": "^0.4.3",
    "dotenv-cli": "^2.0.0",
    "next": "^8.1.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.16.0",
    "eslint-config-env": "^6.0.0",
    "eslint-config-prettier": "^4.3.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-import-order-alphabetical": "^0.0.2",
    "eslint-plugin-node": "^9.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-react-hooks": "^1.6.0",
    "prettier": "^1.17.1"
  },
  "scripts": {
    "dev": "dotenv next",
    "build": "dotenv next build",
    "start": "dotenv npm run start:next",
    "start:next": "next start -p $PORT",
    "test": "eslint . && prettier '**/*.{json,yml,md}' -l",
    "deploy": "now && now alias && now rm svg-symbol-viewer -s"
  },
  "eslintConfig": {
    "extends": [
      "env"
    ],
    "rules": {
      "require-jsdoc": "off"
    }
  },
  "prettier": {
    "proseWrap": "never",
    "singleQuote": true,
    "semi": false
  },
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "transform-inline-environment-variables"
    ]
  },
  "now": {
    "alias": "svgsymbolviewer.io",
    "env": {
      "NODE_ENV": "production",
      "DOMAIN": "svgsymbolviewer.io",
      "PORT": "80",
      "GA_TRACKING_ID": "UA-83641101-1"
    }
  }
}
