{
  "name": "svg-symbol-viewer",
  "description": "A simple drag-and-drop SVG symbol viewer web app.",
  "author": {
    "name": "Jayden Seric",
    "email": "me@jaydenseric.com",
    "url": "http://jaydenseric.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jaydenseric/svg-symbol-viewer"
  },
  "bugs": {
    "url": "https://github.com/jaydenseric/svg-symbol-viewer/issues"
  },
  "private": true,
  "scripts": {
    "lint:js": "eslint . --ext .js --ext .jsx",
    "lint:js:fix": "npm run lint:js -- --fix",
    "clean": "rimraf public/bundle",
    "prebuild": "npm run clean",
    "build": "zoo webpack -p --progress",
    "build:watch": "npm run build -- --watch",
    "start": "zoo node server"
  },
  "dependencies": {
    "babel-polyfill": "^6.13.0",
    "color": "^0.11.3",
    "express": "^4.14.0",
    "radium": "^0.18.1",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "svgxuse": "^1.1.21",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.14.0",
    "babel-eslint": "^6.1.2",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.5.0",
    "eslint": "^3.4.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-react": "^4.0.0",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-react": "^6.2.0",
    "eslint-plugin-standard": "^2.0.0",
    "exports-loader": "^0.6.3",
    "file-loader": "^0.9.0",
    "imports-loader": "^0.6.5",
    "rimraf": "^2.5.4",
    "webpack": "^2.1.0-beta.20",
    "zoo": "^0.1.8"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false,
          "loose": true
        }
      ],
      "stage-0",
      "react"
    ],
    "plugins": [
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "standard",
      "standard-react"
    ],
    "rules": {
      "arrow-parens": [
        2,
        "as-needed"
      ],
      "valid-jsdoc": [
        2,
        {
          "requireReturn": false,
          "prefer": {
            "return": "returns"
          }
        }
      ]
    },
    "globals": {
      "fetch": false
    }
  }
}
