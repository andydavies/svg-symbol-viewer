@custom-media --breakpoint-1 (width >= 30em);

.container {
  padding: 1em;
  text-align: center;
  font-size: 150%;
  color: black;
  background-color: #f90;
  @media (--breakpoint-1) {
    font-size: 180%;
  }
}

.logo {
  width: 2em;
  max-width: 25%;
  vertical-align: middle;
}

h1 {
  display: inline-block;
  margin: .5em;
  font-size: inherit;
}
